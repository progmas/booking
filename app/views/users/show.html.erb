<h1>Your Profile</h1>

<div class="profile-section">
  <h2>Your Information</h2>
  <p><strong>Email:</strong> <%= @user.email %></p>
</div>

<div class="profile-section">
  <h2>Events You Created</h2>
  <% if @created_events.any? %>
    <div class="events-list">
      <% @created_events.each do |event| %>
        <div class="event-card">
          <h3><%= link_to event.name, event_path(event) %></h3>
          <p><strong>Description:</strong> <%= event.description %></p>
          <p><strong>Location:</strong> <%= event.location %></p>
          <p><strong>Date:</strong> <%= event.date.strftime("%B %d, %Y at %I:%M %p") %></p>
          <p><strong>Tickets Available:</strong> <%= event.tickets_available %></p>
          <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-edit' %>
          <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-delete' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't created any events yet.</p>
  <% end %>
</div>

<div class="profile-section">
  <h2>Tickets You Booked</h2>
  <% if @booked_tickets.any? %>
    <div class="tickets-list">
      <% @booked_tickets.each do |ticket| %>
        <div class="ticket-card">
          <h3><%= link_to ticket.event.name, event_path(ticket.event) %></h3>
          <p><strong>Quantity:</strong> <%= ticket.quantity %></p>
          <p><strong>Event Date:</strong> <%= ticket.event.date.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't booked any tickets yet.</p>
  <% end %>
</div>

<%= link_to 'Back to Events', events_path, class: 'btn btn-back' %>