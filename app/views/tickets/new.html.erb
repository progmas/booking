<h1>Complete Your Order</h1>

<%= form_with model: [@event, @ticket], url: event_tickets_path(@event), method: :post do |f| %>
  <div>
    <%= f.label :quantity, "Number of Tickets" %>
    <%= f.number_field :quantity, min: 1, max: @event.tickets_available, value: params[:quantity] || 1 %>
  </div>

  <h3>Payment Information</h3>
  <div>
    <label for="card_number">Card Number</label>
    <input type="text" id="card_number" name="card_number" placeholder="1234 5678 9012 3456">
  </div>
  <div>
    <label for="expiry_date">Expiry Date</label>
    <input type="text" id="expiry_date" name="expiry_date" placeholder="MM/YY">
  </div>
  <div>
    <label for="cvv">CVV</label>
    <input type="text" id="cvv" name="cvv" placeholder="123">
  </div>

  <%= f.submit "Confirm Order" %>
<% end %>

<%= link_to 'Back to Event', event_path(@event) %>